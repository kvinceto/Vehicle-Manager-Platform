@model WaybillViewModelAdd
@{
    ViewData["Title"] = "Add Waybill";
}

<div class="container mt-4 text-center justify-content-center">
    <h1>@ViewData["Title"] for vehicle @Model.VehicleNumber</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="AddWaybill" method="post">
                <table class="table table-bordered">
                    <tr>
                        <td>
                            <div class="form-group">
                                <label>Waybill Date</label>
                                <input asp-for="Date" class="form-control" type="date" data-val-dateformat="dd/MM/yyyy" data-val="true" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Mileage Start</label>
                                <input asp-for=MileageStart class="form-control" type="number" readonly value="@Model.MileageStart" />
                            </div>

                            <div class="form-group">
                                <label>Fuel Loaded</label>
                                <input asp-for="FuelLoaded" class="form-control" type="number" step="0.001" />
                                <span asp-validation-for="FuelLoaded" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Route Traveled</label>
                                <input asp-for="RouteTraveled" class="form-control" />
                                <span asp-validation-for="RouteTraveled" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Info</label>
                                <textarea asp-for="Info" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Info" class="text-danger"></span>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label>Vehicle Number</label>
                                <input asp-for="VehicleNumber" class="form-control" readonly value="@Model.VehicleNumber" />
                            </div>

                            <div class="form-group">
                                <label>Mileage End</label>
                                <input asp-for="MileageEnd" class="form-control" type="number" />
                                <span asp-validation-for="MileageEnd" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Cost Center</label>
                                <select asp-for="CostCenterId" class="form-control" data-val="true" data-val-required="The Cost Center field is required.">
                                    <option value="">Select a cost center</option>
                                    @foreach (var costCenter in Model.CostCenters)
                                    {
                                        <option value="@costCenter.Id">@costCenter.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CostCenterId" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                </table>

                <div class="form-group mt-2 justify-content-md-around text-center">
                    <button type="submit" class="btn btn-outline-warning mt-2">Add Waybill</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
}
