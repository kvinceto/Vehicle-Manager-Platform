@model WaybillDatesViewModel
@{
    ViewData["Title"] = "Select dates and vehicle";
}

<style>
    .validation-message {
        color: red;
        display: none;
    }

    select:invalid + .validation-message {
        display: block;
    }
</style>

<div class="container d-flex justify-content-center">
    <div class="w-50">
        <form asp-area="" asp-controller="Waybill" asp-action="All" method="post">
            <div class="form-group">
                <div>
                    <label class="mb-2 fs-5">Vehicle Number<bold class="text-danger">*</bold></label>
                    <select asp-for="@Model.VehicleNumber" class="form-control" required>
                        <option value="">Select a vehicle</option>
                        @foreach (var vehicle in Model.Vehicles)
                        {
                            <option value="@vehicle.Number">@vehicle.Number</option>
                        }
                    </select>
                    <span class="validation-message">Please select a vehicle</span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label class="mb-2 fs-5">Start Date:<bold class="text-danger">*</bold></label>
                    <input asp-for="@Model.StartDate" class="form-control" type="date" data-val-dateformat="dd/MM/yyyy" data-val="true" />
                    <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label class="mb-1 fs-5">End Date:<bold class="text-danger">*</bold></label>
                    <input asp-for="@Model.EndDate" class="form-control" type="date" data-val-dateformat="dd/MM/yyyy" data-val="true" />
                    <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-2 justify-content-md-around text-center">
                <button type="submit" class="btn btn-outline-success mt-2">View waybills</button>
            </div>
        </form>
    </div>
</div>