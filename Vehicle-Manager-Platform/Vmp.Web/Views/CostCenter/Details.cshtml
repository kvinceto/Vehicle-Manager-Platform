@model CostCenterViewModelDetails
@{
    ViewData["Title"] = "Cost Center Details";
}

<style>
    .custom-table {
        border-collapse: collapse;
        width: 50%;
        margin: 0 auto;
        border: 1px solid black;
    }

        .custom-table th,
        .custom-table td {
            border: 1px solid black;
            padding: 8px;
        }
</style>

<h4 class="text-center mt-2 mb-2">@ViewData["Title"]</h4>

<div class="table-responsive">
    <table class="table custom-table">
        <tbody>
            <tr>
                <th>
                    Cost Center ID:
                </th>
                <td>
                    @Model.Id
                </td>
            </tr>

            <tr>
                <th>
                    Cost Center Name:
                </th>
                <td>
                    @Model.Name
                </td>
            </tr>

            <tr>
                <th>
                    Waybils for this Cost Center:
                </th>
                @if (Model.WaybillsCount <= 0)
                {
                    <td class="text-danger">
                        No Waybills
                    </td>
                }
                else
                {
                    <td>
                        <form asp-area="" asp-controller="Waybill" asp-action="AllForCostCenter" method="get">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-link text-dark align-content-center text-decoration-none"> @Model.WaybillsCount <strong class="text-info">View</strong></button>
                        </form>
                    </td>
                }
            </tr>
        </tbody>
    </table>
</div>