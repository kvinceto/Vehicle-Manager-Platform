@model ICollection<CostCenterViewModelAll>
@{
    ViewData["Title"] = "All Cost Centers";
}
<style>
    .custom-table {
        border-collapse: collapse;
    }

        .custom-table th,
        .custom-table td {
            border: 1px solid black;
        }
</style>

<div class="container">

    <h4 class="text-center">@ViewData["Title"]</h4>
    @if (Model.Count > 0)
    {
        <div class="row justify-content-center text-center align-content-center">
            <div class="col-md-10">
                <div class="table-responsive table-container">
                    <table class="table table-striped table-bordered custom-table table-hover">
                        <thead>
                            <tr class="bg-success">
                                <th class="align-content-center text-center col-1">Id</th>
                                <th class="align-content-center text-center col-8">Name</th>
                                <th class="align-content-center text-center col-1">View</th>
                                <th class="align-content-center text-center col-1">Edit</th>
                                <th class="align-content-center text-center col-1">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>

                                    <td class="text-center bg-info">
                                        <a class="text-dark align-content-center text-decoration-none" asp-area="" asp-controller="CostCenter" asp-action="Details" asp-route-Id="@item.Id">View</a>
                                    </td>

                                    <td class="text-center bg-warning">
                                        <a class="text-dark align-content-center text-decoration-none" asp-area="" asp-controller="CostCenter" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
                                    </td>

                                    <td class="text-center bg-danger">
                                        <form asp-area="" asp-controller="CostCenter" asp-action="Delete" method="post">
                                            <input type="hidden" name="Id" value="@item.Id" />
                                            <button type="submit" class="btn btn-link text-dark align-content-center text-decoration-none">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <h1 class="text-center text-danger">No active cost centers</h1>
    }
</div>
