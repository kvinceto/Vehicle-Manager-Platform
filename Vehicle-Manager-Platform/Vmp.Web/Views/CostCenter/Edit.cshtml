@model CostCenterViewModelAdd
@{
    ViewData["Title"] = "Edit Cost Center";
}

<div class="container">
    <h4 class="text-center mb-2">@ViewData["Title"]</h4>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form asp-action="Edit" method="post">
                <div class="form-group mt-2">
                    <label asp-for="Name" class="fs-5">Cost Center Name<bold class="text-danger">*</bold></label>
                    <input asp-for="Name" class="form-control" placeholder="Example: department name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-2 mb-2 justify-content-md-around text-center">
                    <button type="submit" class="btn btn-outline-warning">Edit</button>
                </div>             
            </form>
        </div>
    </div>
</div>
