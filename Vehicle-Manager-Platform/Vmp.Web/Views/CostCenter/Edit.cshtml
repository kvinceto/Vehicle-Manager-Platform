@model CostCenterViewModelAdd
@{
    ViewData["Title"] = "Edit Cost Center";
}

<div class="container">
    <h4 class="text-center">@ViewData["Title"]</h4>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form asp-action="Edit" method="post">
                <div class="form-group mt-2">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-2 justify-content-md-around text-center">
                    <button type="submit" class="btn btn-outline-warning mt-2">Edit</button>
                </div>             
            </form>
        </div>
    </div>
</div>
