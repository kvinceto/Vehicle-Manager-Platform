@model VehicleViewModelAdd
@{
    ViewData["Title"] = "Edit Vehicle";
}
<div class="container">
    <h4 class="text-center">@ViewData["Title"] @Model.Number</h4>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form asp-action="EditVehicle" method="post">
                <div class="form-group mt-2">
                    <label asp-for="Number" class="fs-5">Registration Number<bold class="text-danger">*</bold></label>
                    <input asp-for="Number" class="form-control" placeholder="Example: TX1234XT" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="VIN" class="fs-5">VIN<bold class="text-danger">*</bold></label>
                    <input asp-for="VIN" class="form-control" placeholder="Example: 4Y1SL65848Z411439" />
                    <span asp-validation-for="VIN" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="Model" class="fs-5">Vehicle Model</label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="Make" class="fs-5">Vehicle Make</label>
                    <input asp-for="Make" class="form-control" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="Mileage" class="fs-5">Vehicle current Mileage<bold class="text-danger">*</bold></label>
                    <input asp-for="Mileage" placeholder="@Model.Mileage" class="form-control" min="0" step="1" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="FuelQuantity" class="fs-5">Current Fuel Quantity<bold class="text-danger">*</bold></label>
                    <input asp-for="FuelQuantity" type="number" placeholder="@Model.FuelQuantity" class="form-control" min="0" step="0.001" />
                    <span asp-validation-for="FuelQuantity" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="FuelCapacity" class="fs-5">Vehicle Fuel Capacity<bold class="text-danger">*</bold></label>
                    <input asp-for="FuelCapacity" type="number" placeholder="@Model.FuelCapacity" class="form-control" min="0" step="0.001" />
                    <span asp-validation-for="FuelCapacity" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <div>
                        <label asp-for="OwnerId" class="fs-5">Owner<bold class="text-danger">*</bold></label>
                        <select asp-for="@Model.OwnerId" class="form-control">
                            @foreach (var owner in Model.Owners)
                            {
                                <option value="@owner.Id">@owner.Name</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.OwnerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="FuelCostRate" class="fs-5">Fuel Cost Rate<bold class="text-danger">*</bold></label>
                    <input asp-for="FuelCostRate" type="number" class="form-control" step="0.01" placeholder="Example: 0.07" />
                    <span asp-validation-for="FuelCostRate" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="ModelImgUrl" class="fs-5">Image URL</label>
                    <input asp-for="ModelImgUrl" class="form-control" />
                    <span asp-validation-for="ModelImgUrl" class="text-danger"></span>
                </div>

                <div class="form-group mt-2 justify-content-md-around text-center">
                    <button type="submit" class="btn btn-outline-warning mt-2">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>
