@using Vmp.Web.ViewModels.VehicleViewModels
@model VehicleViewModelAdd
@{
    ViewData["Title"] = "Add Vehicle";
}

<div class="container">
    <h1 class="text-center">Add Vehicle</h1>

    <form asp-action="Add" method="post" class="needs-validation" novalidate>
        <div class="form-group mt-2">
            <label asp-for="Number">Number</label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="VIN">VIN</label>
            <input asp-for="VIN" class="form-control" />
            <span asp-validation-for="VIN" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Model">Model</label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Make">Make</label>
            <input asp-for="Make" class="form-control" />
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Mileage">Mileage</label>
            <input asp-for="Mileage" class="form-control" />
            <span asp-validation-for="Mileage" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="FuelQuantity">Fuel Quantity</label>
            <input asp-for="FuelQuantity" class="form-control" />
            <span asp-validation-for="FuelQuantity" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="FuelCapacity">Fuel Capacity</label>
            <input asp-for="FuelCapacity" class="form-control" />
            <span asp-validation-for="FuelCapacity" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="OwnerId">Owner ID</label>
            <input asp-for="OwnerId" class="form-control" />
            <span asp-validation-for="OwnerId" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="FuelCostRate">Fuel Cost Rate</label>
            <input asp-for="FuelCostRate" class="form-control" />
            <span asp-validation-for="FuelCostRate" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="ModelImgUrl">Model Image URL</label>
            <input asp-for="ModelImgUrl" class="form-control" />
            <span asp-validation-for="ModelImgUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Add</button>
    </form>
</div>

@section Scripts {
    <script>
        // Enable form validation
        (function () {
            'use strict';

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation');

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
