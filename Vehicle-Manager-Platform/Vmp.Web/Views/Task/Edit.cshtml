@model TaskViewModelAdd
@{
    ViewData["Title"] = "Edit Task";
}

<div class="container d-flex justify-content-center">
    <div class="w-50">

        <h4 class="text-center">@ViewData["Title"]</h4>

        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="@Model.Name" class="form-label-add-edit">Name</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="form-label-add-edit">Deadline</label>
                <input asp-for="@Model.Deadline" type="date" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                <span asp-validation-for="@Model.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 justify-content-md-around text-center">
                <input type="submit" value="Edit Task" class="btn btn-outline-warning" />
            </div>           
        </form>
    </div>
</div>