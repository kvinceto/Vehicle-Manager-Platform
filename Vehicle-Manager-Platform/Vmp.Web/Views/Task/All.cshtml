@model ICollection<TaskViewModelAll>
@{
    ViewData["Title"] = "All tasks";
    int rowCount = 0;
}

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-3" scope="col">Name</th>
                <th class="col-3" scope="col">Deadline</th>
                <th class="col-3" scope="col">Owner</th>
                <th class="col-3" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var task in Model)
                {
                    rowCount++;
                    <th scope="row">@rowCount</th>
                    <td>@task.Name</td>
                    <td>@task.EndDate</td>
                    <td>@task.User</td>
                    <td>
                        <a class="text-dark" asp-area="" asp-controller="Task" asp-action="ViewTask" asp-route-item-Id="@task.Id">View</a>
                    </td>
                }
            </tr>
        </tbody>
    </table>
</div>