@model DateCheckViewModelDetails
@{
    ViewData["Title"] = "Date Check Details";
    DateTime today = DateTime.UtcNow.Date;
}

<style>
    .custom-table {
        border-collapse: collapse;
        width: 50%;
        margin: 0 auto;
        border: 1px solid black;
    }

        .custom-table th,
        .custom-table td {
            border: 1px solid black;
            padding: 8px;
        }
</style>

<h4 class="text-center mt-2 mb-2">@ViewData["Title"]</h4>

<div class="table-responsive">
    <table class="table custom-table">
        <tbody>
            <tr>
                <th>
                   Date Check ID:
                </th>
                <td>
                    @Model.Id
                </td>
            </tr>

            <tr>
                <th>
                   Date Check Name:
                </th>
                <td>
                    @Model.Name
                </td>
            </tr>

            <tr>
                <th>
                    Deadline:
                </th>
                @{
                    DateTime endDate = DateTime.Parse(Model.EndDate);
                }
                @if (today.CompareTo(endDate) < 0)
                {
                    <td>@Model.EndDate</td>
                }
                else if (today.CompareTo(endDate) == 0)
                {
                    <td class="text-warning">@Model.EndDate</td>
                }
                else
                {
                    <td class="text-danger">@Model.EndDate</td>
                }               
            </tr>

            <tr>
                <th>
                    Vehicle Number:
                </th>
                <td>
                    @Model.VehicleNumber
                </td>
            </tr>

            <tr>
                <th>
                    User:
                </th>
                <td>
                    @Model.User
                </td>
        </tbody>
    </table>
</div>