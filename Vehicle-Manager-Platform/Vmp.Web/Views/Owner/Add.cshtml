@model OwnerViewModelAdd
@{
    ViewData["Title"] = "Add New Owner";
}

<div class="container d-flex justify-content-center">
    <div class="w-50">

        <h4 class="text-center">@ViewData["Title"]</h4>

        <form asp-action="Add" method="post">
            <div class="form-group mt-2">
                <label asp-for="Name" class="fs-5">Owner Name<bold class="text-danger">*</bold></label>
                <input asp-for="Name" class="form-control" placeholder="Example: Ivan Ivanov" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="Info" class="fs-5">Additional Info for the Owner</label>
                <input asp-for="Info" class="form-control" placeholder="Some info"/>
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center mt-2 mb-2">
                <button type="submit" class="btn btn-outline-warning">Add</button>
            </div>
        </form>
    </div>
</div>
